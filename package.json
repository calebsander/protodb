{
	"name": "proto-database",
	"version": "2.0.0",
	"description": "A structured byte-buffer database",
	"main": "dist/client/index.js",
	"typings": "dist/client",
	"bin": {
		"protodb": "dist/main.js"
	},
	"scripts": {
		"build-ts": "rm -rf dist && tsc && tsc -p client && cp pb/*.proto dist/pb && chmod a+x dist/main.js",
		"build-napi": "node-gyp rebuild && mv build/Release/mmap.node dist/mmap-wrapper.node && rm -r build",
		"build": "npm run build-ts && npm run build-napi",
		"coveralls": "coveralls < coverage/lcov.info",
		"prepack": "npm run build-ts",
		"install": "npm run build-napi",
		"test": "npm run build && tsc -p test && nyc --reporter=lcov ava -v -T 1m dist/test/main.js"
	},
	"files": [
		"binding.gyp",
		"dist/**/*.js",
		"dist/pb/*.proto",
		"dist/client/index.d.ts",
		"dist/pb/interface.d.ts",
		"mmap-wrapper/mmap.c"
	],
	"author": "Caleb Sander",
	"license": "MIT",
	"devDependencies": {
		"@types/node": "^14.0.23",
		"@types/yargs": "^15.0.5",
		"ava": "^3.10.1",
		"coveralls": "^3.1.0",
		"nyc": "^15.1.0",
		"typescript": "^3.9.7"
	},
	"dependencies": {
		"protobufjs": "^6.10.1",
		"yargs": "^15.4.1"
	},
	"engines": {
		"node": ">=10.0.0"
	},
	"os": [
		"darwin",
		"linux"
	],
	"repository": {
		"type": "git",
		"url": "https://github.com/calebsander/protodb"
	},
	"nyc": {
		"exclude": "dist/test"
	}
}
